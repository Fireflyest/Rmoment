<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/background</item>
    </style>

    <style name="button_blue_style">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/circle_primary</item>
    </style>

    <style name="button_circle_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/circle_background</item>
    </style>

    <style name="button_week_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/circle_foreground</item>
    </style>




    <style name="text_light">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_clickable">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_max">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textScaleX">1.2</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-condensed</item>
    </style>

    <style name="text_emphasis">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textScaleX">1.2</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-condensed</item>
    </style>

    <style name="text_title">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:background">@drawable/circle_primary</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_bold">
        <item name="android:textColor">@color/colorIcon</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
